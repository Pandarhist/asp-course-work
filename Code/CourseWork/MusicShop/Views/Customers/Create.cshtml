@model MusicShop.Models.Customer

@{
    ViewData["Title"] = "Добавить покупателя";
}

<div class="row">
    <div class="col-md-5 mx-auto">
        <form asp-action="Create">
            <h4>Добавление покупателя</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Surname" class="mb-2 control-label text-decoration-underline">Фамилия</label>
                <input asp-for="Surname" class="form-control" placeholder="Иванов" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="my-2 control-label text-decoration-underline">Имя</label>
                <input asp-for="Name" class="form-control" placeholder="Иван" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic" class="my-2 control-label text-decoration-underline">Отчество</label>
                <input asp-for="Patronymic" class="form-control" placeholder="Иванович" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="my-2 control-label text-decoration-underline">Контактный телефон</label>
                <input asp-for="PhoneNumber" class="form-control" type="tel" pattern="+[375]\d{9}" placeholder="+375XXXXXXXXX" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-between mt-2">
                <input type="submit" value="Добавить" class="btn btn-primary w-50 me-1" />
                <input type="reset" value="Очистить" class="btn btn-dark w-50 ms-1" />
            </div>
        </form>
        <div class="d-flex">
            <a asp-action="Index" class="btn btn-secondary w-100 p-1 mt-2">Вернуться к покупателям</a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
