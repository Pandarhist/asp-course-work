@model MusicShop.Models.ProductType

@{
    ViewData["Title"] = "Изменить тип товара";
}

<div class="row">
    <div class="col-md-5 mx-auto">
        <form asp-action="Edit">
            <h4>Сведения о типе товара</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="mb-2 control-label text-decoration-underline">Тип товара</label>
                <input asp-for="Name" class="form-control" placeholder="Наименование" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mt-2">
                <input type="submit" value="Сохранить" class="btn btn-primary w-100" />
            </div>
        </form>
        <div class="d-flex">
            <a asp-action="Index" class="btn btn-secondary w-100 p-1 mt-2">Вернуться к типам товара</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
