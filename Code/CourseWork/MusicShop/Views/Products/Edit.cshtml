@model MusicShop.Models.Product

@{
    ViewData["Title"] = "Изменить товар";
}

<div class="row">
    <div class="col-md-5 mx-auto">
        <form asp-action="Edit">
            <h4>Сведения о товаре</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TypeId"class="mb-2 control-label text-decoration-underline">Типа товара</label>
                <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="mb-2 control-label text-decoration-underline">Наименование</label>
                <input asp-for="Name" class="form-control" placeholder="Товар" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producer" class="mb-2 control-label text-decoration-underline">Производитель</label>
                <input asp-for="Producer" class="form-control" placeholder="Мануфактура" />
                <span asp-validation-for="Producer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="mb-2 control-label text-decoration-underline">Цена</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="mb-2 control-label text-decoration-underline">Описание</label>
                <textarea asp-for="Description" class="form-control" placeholder="Этот товар...">
                </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="mb-2 control-label text-decoration-underline">Кол-во на складе</label>
                <input asp-for="Amount" class="form-control" min="0" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mt-2">
                <input type="submit" value="Сохранить" class="btn btn-primary w-100" />
            </div>
        </form>
        <div class="d-flex">
            <a asp-action="Index" class="btn btn-secondary w-100 p-1 mt-2">Вернуться к каталогу</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
