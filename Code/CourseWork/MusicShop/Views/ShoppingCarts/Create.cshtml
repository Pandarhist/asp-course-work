@model MusicShop.Models.ShoppingCart

@{
    ViewData["Title"] = "Добавить товар в корзину";
}

<div class="row">
    <div class="col-md-5 mx-auto">
        <form asp-action="Create">
            <h4>Добавление товара в корзину</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderId" class="mb-2 control-label text-decoration-underline">Номер заказа</label>
                <select asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="mb-2 control-label text-decoration-underline">Наименование товара</label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="mb-2 control-label text-decoration-underline">Кол-во товара</label>
                <input asp-for="Count" class="form-control" min="1" value="1" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-between mt-2">
                <input type="submit" value="Добавить" class="btn btn-primary w-50 me-1" />
                <input type="reset" value="Очистить" class="btn btn-dark w-50 ms-1" />
            </div>
        </form>
        <div class="d-flex">
            <a asp-action="Index" class="btn btn-secondary w-100 p-1 mt-2">Вернуться к каталогу</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
