@model MusicShop.Models.User

@{
    ViewData["Title"] = "Добавить пользователя";
}

<div class="row">
    <div class="col-md-5 mx-auto">
        <form asp-action="Create">
            <h4>Добавление пользователя</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="mb-2 control-label text-decoration-underline">Логин</label>
                <input asp-for="Login" class="form-control" placeholder="login" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="mb-2 control-label text-decoration-underline">Пароль</label>
                <input asp-for="Password" class="form-control" placeholder="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-between mt-2">
                <input type="submit" value="Добавить" class="btn btn-primary w-50 me-1" />
                <input type="reset" value="Очистить" class="btn btn-dark w-50 ms-1" />
            </div>
        </form>
        <div class="d-flex">
            <a asp-action="Index" class="btn btn-secondary w-100 p-1 mt-2">Вернуться к пользователям</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
